<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F0"
    tools:context=".controller.AddProtocolActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header với background màu hồng -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink_500"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="Back"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Protocol"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Scrollable Form Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- SOP Name Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOP Name"
                            android:textSize="12sp"
                            android:textColor="@color/pink_500"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/edtSopsName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter SOP name"
                            android:textColorHint="#999999"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:minHeight="48dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Protocol Title Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Protocol Title"
                            android:textSize="12sp"
                            android:textColor="@color/pink_500"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/edtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter protocol title"
                            android:textColorHint="#999999"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:minHeight="48dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Description Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="12sp"
                            android:textColor="@color/pink_500"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <EditText
                            android:id="@+id/edtDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter protocol description"
                            android:textColorHint="#999999"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="textMultiLine"
                            android:minHeight="120dp"
                            android:gravity="top|start"
                            android:scrollbars="vertical"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Experiment Spinner Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Experiment"
                            android:textSize="12sp"
                            android:textColor="@color/pink_500"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <Spinner
                            android:id="@+id/spinnerExperiment"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:minHeight="48dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- File Path PDF Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_upload"
                                app:tint="@color/pink_500"
                                android:contentDescription="PDF icon"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protocol PDF File (Optional)"
                                android:textSize="12sp"
                                android:textColor="@color/pink_500"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnChooseFilePath"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Choose PDF File"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/pink_500"
                            app:icon="@android:drawable/ic_menu_upload"
                            app:iconTint="@android:color/white"
                            app:iconGravity="textStart"/>

                        <TextView
                            android:id="@+id/tvFilePathName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No file selected"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:background="#F5F5F5"
                            android:drawablePadding="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Safe Data Sheet PDF Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_dialog_alert"
                                app:tint="@color/pink_500"
                                android:contentDescription="Safety icon"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Safety Data Sheet PDF (Optional)"
                                android:textSize="12sp"
                                android:textColor="@color/pink_500"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnChooseSafeDataSheet"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Choose SDS PDF"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/pink_500"
                            app:icon="@android:drawable/ic_menu_upload"
                            app:iconTint="@android:color/white"
                            app:iconGravity="textStart"/>

                        <TextView
                            android:id="@+id/tvSafeDataSheetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No file selected"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:background="#F5F5F5"
                            android:drawablePadding="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveProtocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Protocol"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/pink_500"
                    android:textColor="@android:color/white"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>