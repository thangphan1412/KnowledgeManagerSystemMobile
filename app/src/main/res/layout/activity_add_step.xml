<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Step"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/pink_500"
        android:layout_marginBottom="24dp"/>

    <!-- Step Number Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFF0F0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step Number *"
                android:textSize="12sp"
                android:textColor="@color/pink_500"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtStepNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 1, 2, 3..."
                android:textColorHint="#999999"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:minHeight="48dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Step Description Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFF0F0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textSize="12sp"
                android:textColor="@color/pink_500"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtStepDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter step description"
                android:textColorHint="#999999"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:gravity="top|start"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Safety Note Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#FFF0F0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="@color/pink_500"
                    android:contentDescription="Safety icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety Note (Optional)"
                    android:textSize="12sp"
                    android:textColor="@color/pink_500"
                    android:textStyle="bold"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edtSafetyNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter any safety precautions or warnings"
                android:textColorHint="#999999"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:minHeight="80dp"
                android:gravity="top|start"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <!-- Cancel Button -->
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <!-- Add Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnAddStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/pink_500">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Step"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>