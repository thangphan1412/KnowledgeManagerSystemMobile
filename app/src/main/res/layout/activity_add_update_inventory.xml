<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.AddUpdateInventoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_add_item"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close"
            app:title="Add/Update Inventory" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃªn Váº­t tÆ° -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_item_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name(e.g. Ethanol 99%)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ðŸ”¥ ÄÃƒ XÃ“A: TrÆ°á»ng "Sá»‘ LÃ´" (Lot Number) Ä‘Ã£ bá»‹ xÃ³a vÃ¬ khÃ´ng cÃ³ trong Model -->

            <!-- ðŸ”¥ ÄÃƒ THÃŠM: TrÆ°á»ng "CÃ´ng thá»©c" (Formula) tá»« Model -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_formula"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Formula * (e.g. C2H5OH)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_formula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vá»‹ trÃ­ -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_location"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Location (e.g. Tá»§ A, NgÄƒn 2)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- NgÃ y háº¿t háº¡n (DÃ¹ng DatePicker) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_expiry_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Expiry Date (HSD)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_calendar_expiry"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ðŸ”¥ ÄÃƒ THÃŠM: TrÆ°á»ng "Tráº¡ng thÃ¡i" (Status) tá»« Model -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_status"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Status *">

                <AutoCompleteTextView
                    android:id="@+id/spinner_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Update Quantity:"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

            <!-- ðŸ”¥ ÄÃƒ THÃŠM: Hiá»ƒn thá»‹ sá»‘ lÆ°á»£ng hiá»‡n táº¡i -->
            <TextView
                android:id="@+id/text_view_current_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="Available: 1000 mL" />

            <!-- Sá»‘ lÆ°á»£ng Check In / Check Out -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:baselineAligned="false">

                <!-- Sá»‘ lÆ°á»£ng (vÃ­ dá»¥: 100) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_quantity"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginEnd="8dp"
                    android:hint="Amount to change (+/-)"> <!-- ðŸ”¥ ÄÃƒ Sá»¬A HINT -->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ÄÆ¡n vá»‹ (vÃ­ dá»¥: mL) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_units"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Unit">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="mL"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- NÃºt Check In (Nháº­p) vÃ  Check Out (Xuáº¥t) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_check_out"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Check out (-)"
                    app:icon="@drawable/ic_remove"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_check_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Check in (+)"
                    app:icon="@drawable/ic_add"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>