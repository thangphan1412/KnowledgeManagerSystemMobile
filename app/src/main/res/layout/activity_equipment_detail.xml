<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.EquipmentDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_equipment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="HPLC Machine #2" />
        <TextView
            android:id="@+id/text_view_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="Model: Agilent 1260" />
        <TextView
            android:id="@+id/text_view_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginBottom="8dp"
            tools:text="Serial #: US12345678" />
        <TextView
            android:id="@+id/text_view_equipment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold"
            tools:text="Trạng thái: Sẵn sàng" />

        <Button
            android:id="@+id/button_download_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tải Hướng dẫn (PDF)"
            app:icon="@drawable/ic_download"
            android:backgroundTint="#E09B9B"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_go_to_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Đặt lịch thiết bị này"
            android:textColor="#E09B9B"
            app:strokeColor="#E09B9B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nhật ký Bảo trì và Hiệu chuẩn"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_maintenance_logs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEEEEE"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_log" />

    </LinearLayout>
</ScrollView>