<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    tools:context=".controller.EquipmentListActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_equipment_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAppPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Chọn Thiết bị"
        app:titleTextColor="@color/colorOnPrimary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_equipment_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_equipment_list"
        tools:listitem="@layout/item_equipment" />
</androidx.constraintlayout.widget.ConstraintLayout>