<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F8A5A5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header with Step Number and Delete Button -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Step Number Circle -->
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:id="@+id/tvStepNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/pink_500"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <!-- Step Title -->
            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Step 1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="16dp"/>

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDeleteStep"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="Delete step"
                android:padding="6dp"/>

        </LinearLayout>

        <!-- Step Description -->
        <TextView
            android:id="@+id/tvStepDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the step goes here"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Safety Note Section (only visible if safety note exists) -->
        <LinearLayout
            android:id="@+id/layoutSafetyNote"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="@color/pink_500"
                android:contentDescription="Warning icon"
                android:layout_marginEnd="8dp"
                android:layout_gravity="top"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety Note"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/pink_500"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvSafetyNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety note content"
                    android:textSize="13sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>